<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context="com.example.priya.E_ShopWithvoiceAssistance.aaaa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Total Price" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="94dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="176dp" />


    </LinearLayout>


    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:ems="10"
        android:hint="Please Enter Address Here"
        android:inputType="textMultiLine" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="225dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:onClick="displayResult"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="submit" />
    </LinearLayout>

    <TextView
        android:id="@+id/spinnerValueIsHere"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:hint="Please select Payment Method" />


    <EditText
        android:id="@+id/phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Please Enter the phone number" />

    <EditText
        android:id="@+id/transection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Please Enter the Transaction Id" />

    <Button
        android:id="@+id/button3"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Button" />
</LinearLayout>